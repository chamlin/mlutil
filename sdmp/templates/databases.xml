<template xmlns="http://marklogic.com/xdmp/tde">
    <path-namespaces>
        <path-namespace>
            <prefix>db</prefix>
            <namespace-uri>http://marklogic.com/xdmp/database</namespace-uri>
        </path-namespace>
    </path-namespaces>
    <context>/db:databases/db:database</context>
    <vars>
        <var>
            <name>DBID</name>
            <val>db:database-id</val>
        </var>
    </vars>
    <rows>
        <row>
            <schema-name>sdmp</schema-name>
            <view-name>databases</view-name>
            <columns>
                <column>
                    <name>database_name</name>
                    <scalar-type>string</scalar-type>
                    <val>db:database-name</val>
                    <invalid-values>reject</invalid-values>
                </column>
                <column>
                    <name>database_id</name>
                    <scalar-type>unsignedLong</scalar-type>
                    <val>$DBID</val>
                    <invalid-values>reject</invalid-values>
                </column>                
            </columns>
        </row>
    </rows>
    <templates>
        <template>
            <context>db:forests/db:forest-id</context>
            <rows>
                <row>
                    <schema-name>sdmp</schema-name>
                    <view-name>databases_forests</view-name>
                    <columns>
                        <column>
                            <name>database_id</name>
                            <scalar-type>unsignedLong</scalar-type>
                            <val>$DBID</val>
                            <invalid-values>reject</invalid-values>
                        </column>
                        <column>
                            <name>forest_id</name>
                            <scalar-type>unsignedLong</scalar-type>
                            <val>.</val>
                            <invalid-values>reject</invalid-values>
                        </column>
                    </columns>
                </row>
            </rows>
        </template>
    </templates>
</template>
